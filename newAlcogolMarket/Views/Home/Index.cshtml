@model IEnumerable<newAlcogolMarket.Models.Entity.User>
 
<h2>Список пользователей</h2>
<p><a asp-action="SignUp">Добавить пользователя</a></p>
<table class="table">
     <tr><th>ID</th><th>Имя</th><th>Возраст</th><th></th><th></th></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Login</td>
            <td>@item.Password</td>
            <td>
                <a asp-action="Edit" asp-controller="Home" asp-route-id="@item.Id">Изменить</a>
            </td>
            <td>
                <form asp-controller="Home" asp-action="Delete" method="post"  asp-route-id="@item.Id">
                    <input type="submit" value="Удалить" />
                </form>
            </td>
        </tr>
    }
</table>