@model List<Size>
<h3>Добавить Size</h3>
<form asp-action="AddSize" style="display:flex;">
    <p>
        <label>Name</label><br />
        <input type="text" name="Name" />
    </p>
    <p>
        <label>Volume</label><br />
        <input type="text" name="Volume" />
    </p>
    <input type="submit" value="Добавить" />
</form>
<br />
<div>
        <table>
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>Volume</td>
            </tr>
        </table>
    @foreach(var item in Model)
    {
        <table>
            
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Volume</td>
        </tr>
        </table>
    }
</div>
