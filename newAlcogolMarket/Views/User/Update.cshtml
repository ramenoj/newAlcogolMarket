@model newAlcogolMarket.Models.Entities.User
<html>
    <head>
        <meta charset='utf-8' />
    </head>
    <body>
        <h2>Изменение профиля пользователя</h2>
        <form method='post'>
            <p>
                <label>Новый логин</label><br />
                <input name='login' />
            </p>
            <p>
                <label>Новый пароль</label><br />
                <input type='password' name='password' />
            </p>
            <input  asp-action="Update" type='submit' value='Login' />
        </form>
    </body>
</html>