@model List<User>
<head>
    <link rel="stylesheet" href="~/css/admin.css"/>
</head>
<h3>Добавить User</h3>
<form asp-action="AddUser" style="display:flex;">
    <p>
        <label>Login</label><br />
        <input type="text" name="Login" />
    </p>
    <p>
        <label>Password</label><br />
        <input type="text" name="Password" />
    </p>
    <input type="submit" value="Добавить" />
</form>
<div class="somecontainer">
    <nav class="leftmenu">
        <a asp-action="ProductView">Products</a><br />
        <a asp-action="CategoryView">Categories</a><br />
        <a asp-action="UserView">Users</a><br />
        <a asp-action="SnackView">Snacks</a><br/>
        <a asp-action="SizeView">Sizes</a><br/>
        <a asp-action="CountryView">Countries</a><br/>
    </nav>
</div>
<br/>
<div>
        <table>
            <tr>
                <td>Id</td>
                <td>Login</td>
                <td>Password</td>
            </tr>
        </table>
    @foreach(var item in Model)
    {
        <table>
        <tr>
            <td>@item.Id</td>
            <td>@item.Login</td>
            <td>@item.Password</td>
             <td style="position: relative;box-sizing: border-box; top: 0px;">
                <form asp-controller="User" asp-action="DeleteUser" method="post" asp-route-id="@item.Id" style="display:flex;">
                    <input type="submit" value="Удалить">
                </form>
                <form asp-controller="User" asp-action="UpdateUser" method="post" asp-route-id="@item.Id" style="display:flex;">
                    <p>
                        <label>Login</label><br/>
                        <input type="text" name="Login" />
                    </p>
                    <p>
                        <label>Password</label><br />
                         <input type="text" name="Password" />
                    </p>
                   <input type="submit" value="Сохранить" />
                </form>
            </td>
        </tr>
        </table>
    }
</div>