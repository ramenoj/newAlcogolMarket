@model List<Country>
<h3>Добавить Country</h3>
<form asp-action="CountryAdd" style="display:flex;">
    <p>
        <label>Name</label><br />
        <input type="text" name="Name" />
    </p>
    <input type="submit" value="Добавить" />
</form>
<br />
<div>
        <table>
            <tr>
                <td>Id</td>
                <td>Name</td>
            </tr>
        </table>
    @foreach(var item in Model)
    {
        <table>   
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
        </tr>
        </table>
    }
</div>
